<h1>Creating new article</h1>

<%= form_with scope: :article , url:articles_path , local:true do |f| %>
  <p>
    <%= f.label :Title  %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Description  %> <br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>